<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SDKDatePickerDialogStyle" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:datePickerStyle">@style/SDKDatePickerStyle</item>
        <item name="android:colorControlActivated">@android:color/holo_blue_dark</item>
        <item name="android:textColorSecondary">@android:color/holo_blue_dark</item>
    </style>

    <style name="SDKDatePickerStyle" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:dayOfWeekBackground">@android:color/holo_blue_light</item>
        <item name="android:dayOfWeekTextAppearance">@style/SDKTitleDayOfWeekTextAppearance</item>
        <item name="android:headerBackground" >@android:color/white</item>
        <item name="android:headerYearTextAppearance">@style/SDKHeaderYearTextAppearance</item>
        <item name="android:headerMonthTextAppearance">@style/SDKHeaderMonthTextAppearance</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/SDKHeaderDayOfMonthTextAppearance</item>
    </style>

    <style name="SDKTitleDayOfWeekTextAppearance" parent="android:TextAppearance.Material">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="SDKHeaderYearTextAppearance" parent="android:TextAppearance.Material">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="SDKHeaderMonthTextAppearance" parent="android:TextAppearance.Material">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="SDKHeaderDayOfMonthTextAppearance" parent="android:TextAppearance.Material">
        <item name="android:textSize">50sp</item>
    </style>
    
    
</resources>