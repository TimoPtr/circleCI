<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="@dimen/dot_six"
  android:clipToPadding="false"
  android:fitsSystemWindows="true"
  tools:ignore="HardcodedText">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dot_double"
    android:textColor="@color/black">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Header text styles"
      android:textAppearance="?textAppearanceSubtitle1" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextAppearance.Headline1"
      android:textAppearance="?textAppearanceHeadline1" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextAppearance.Headline2"
      android:textAppearance="?textAppearanceHeadline2" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextAppearance.Headline3"
      android:textAppearance="?textAppearanceHeadline3" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextAppearance.Headline4"
      android:textAppearance="?textAppearanceHeadline4" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextAppearance.Headline5"
      android:textAppearance="?textAppearanceHeadline5" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextAppearance.Headline6"
      android:textAppearance="?textAppearanceHeadline6" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot_quad"
      android:layout_marginBottom="@dimen/dot"
      android:text="Content text styles"
      android:textAppearance="?textAppearanceSubtitle1"
      android:textColor="@color/black" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="TextAppearance.Subtitle1"
      android:textAppearance="?textAppearanceSubtitle1" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
      android:textAppearance="?textAppearanceSubtitle1" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:text="TextAppearance.Subtitle2"
      android:textAppearance="?textAppearanceSubtitle2" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
      android:textAppearance="?textAppearanceSubtitle2" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:text="TextAppearance.Body1"
      android:textAppearance="?textAppearanceBody1" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse dapibus sem sed viverra cursus. Interdum et malesuada fames ac ante ipsum primis in faucibus. Nullam porta odio in odio malesuada molestie vitae sed diam. In efficitur congue suscipit. Donec consectetur et ligula quis ultrices."
      android:textAppearance="?textAppearanceBody1" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:text="TextAppearance.Body2"
      android:textAppearance="?textAppearanceBody2" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse dapibus sem sed viverra cursus. Interdum et malesuada fames ac ante ipsum primis in faucibus. Nullam porta odio in odio malesuada molestie vitae sed diam. In efficitur congue suscipit. Donec consectetur et ligula quis ultrices."
      android:textAppearance="?textAppearanceBody2" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:text="TextAppearance.Button"
      android:textAppearance="?textAppearanceButton" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:text="TextAppearance.Caption"
      android:textAppearance="?textAppearanceCaption" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:text="TextAppearance.Overline"
      android:textAppearance="?textAppearanceOverline" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot_double"
      android:text="TextAppearance.Caption"
      android:textAppearance="?textAppearanceCaption" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot_quad"
      android:layout_marginBottom="@dimen/dot"
      android:text="Button styles"
      android:textAppearance="?textAppearanceSubtitle1"
      android:textColor="@color/black" />

    <Button
      style="?materialButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Contained Button" />

    <Button
      style="?materialButtonStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Wide contained button" />

    <Button
      style="?materialButtonIconStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Contained Button with icon"
      app:icon="@drawable/ic_hum_button_sample_icon" />

    <Button
      style="?materialButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="?colorBackgroundDark"
      android:text="Contained with different color" />

    <Button
      style="?materialButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Contained with different text color"
      android:textColor="?android:textColorPrimary" />

    <Button
      style="?materialButtonStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/white"
      android:text="White button"
      android:textColor="?android:textColorPrimary"
      app:rippleColor="?rippleColorMono" />

    <Button
      style="?materialButtonOutlinedStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Outlined button" />

    <Button
      style="?materialButtonOutlinedStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Wide outlined button" />

    <Button
      style="?materialButtonOutlinedIconStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Outlined Button with icon"
      app:icon="@drawable/ic_hum_button_sample_icon" />

    <Button
      style="?materialButtonOutlinedIconStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Outlined button with different text color"
      android:textColor="?android:textColorPrimary" />

    <Button
      style="?materialButtonTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Text button" />

    <Button
      style="?materialButtonTextStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Wide text button" />

    <Button
      style="?materialButtonTextStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Text button with text color"
      android:textColor="?android:textColorTertiary" />

    <Button
      style="?materialButtonTextStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Text button with mono ripple color"
      app:rippleColor="?rippleColorMono" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot_quad"
      android:layout_marginBottom="@dimen/dot"
      android:text="Input field styles"
      android:textAppearance="?textAppearanceSubtitle1"
      android:textColor="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Input sample">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--  DOESN'T WORK AS EXPECTED YET -->
    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:enabled="false"
      android:hint="Disabled sample"
      android:visibility="gone">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/error_input"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dot"
      android:hint="Error sample">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Counter sample"
      app:counterEnabled="true"
      app:counterMaxLength="20">

      <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- If data binding is enabled you can use: `app:timer_seconds="@{viewModel.secondsElapsed}"` -->
    <com.kolibree.android.app.widget.TimerView
      android:id="@+id/timerView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/dot" />

    <!--CheckBoxe and RadioButton-->
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <CheckBox android:id="@+id/checkbox_meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
        android:text="Check Box"/>

      <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton android:id="@+id/radio_pirates"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
          android:text="Option 1"/>

        <RadioButton android:id="@+id/radio_ninjas"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Widget.MaterialComponents.CompoundButton.RadioButton"
          android:text="Option 2"/>
      </RadioGroup>
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginVertical="@dimen/dot_quad"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Activity Theme : " />

      <Spinner
        android:id="@+id/themeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    </LinearLayout>

  </LinearLayout>

</ScrollView>
