<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
  V1 COMPAT TEXT APPEARANCES
  -->

  <style name="TextAppearance.V1">
    <item name="android:textColor">?android:textColorPrimary</item>
  </style>


  <!--
  HEADLINE
  -->

  <style name="TextAppearance.V1.Headline1">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/xxhuge_text</item>
  </style>

  <style name="TextAppearance.V1.Headline2">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/huge_text</item>
  </style>

  <style name="TextAppearance.V1.Headline3">
    <item name="android:textSize">@dimen/xxbig_text</item>
  </style>

  <style name="TextAppearance.V1.Headline4">
    <item name="android:textSize">@dimen/big_text</item>
  </style>

  <style name="TextAppearance.V1.Headline5">
    <item name="android:textSize">@dimen/xnormal_text</item>
  </style>

  <style name="TextAppearance.V1.Headline6">
    <item name="android:textSize">@dimen/normal_text</item>
  </style>

  <!--
  SUBTITLE
  -->

  <style name="TextAppearance.V1.Subtitle1">
    <item name="android:textSize">@dimen/xnormal_text</item>
  </style>

  <style name="TextAppearance.V1.Subtitle2">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/normal_text</item>
  </style>

  <!--
  BODY
  -->

  <style name="TextAppearance.V1.Body1">
    <item name="android:textSize">@dimen/xnormal_text</item>
  </style>

  <style name="TextAppearance.V1.Body2">
    <item name="android:textSize">@dimen/medium_text</item>
  </style>

  <!--
  BUTTON
  -->

  <style name="TextAppearance.V1.Button">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/medium_text</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <!--
  CAPTION
  -->

  <style name="TextAppearance.V1.Caption">
    <item name="android:textSize">@dimen/medium_text</item>
  </style>

  <!--
  OVERLINE
  -->

  <style name="TextAppearance.V1.Overline1">
    <item name="android:textSize">@dimen/average_text</item>
  </style>

  <style name="TextAppearance.V1.Overline2">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/below_average_text</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!-- Game Intro -->

  <style name="Text" />

  <style name="Text.GameIntro">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="Text.GameIntro.Header">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/xxhuge_text</item>
  </style>

  <style name="Text.GameIntro.Body">
    <item name="android:textSize">@dimen/big_text</item>
  </style>

  <style name="Button.GameIntro.White" parent="WhiteRoundButton">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/xnormal_text</item>
  </style>

</resources>
