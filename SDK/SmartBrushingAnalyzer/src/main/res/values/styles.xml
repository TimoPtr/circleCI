<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Dashboard stickers appearance -->
  <style name="DashboardSticker">
    <item name="android:layout_width">30dp</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:layout_gravity">top|end</item>
    <item name="android:elevation">2dp</item>
  </style>

  <style name="TestBrushingInstructionsIndex">
    <item name="android:layout_width">@dimen/test_brushing_instructions_index_size</item>
    <item name="android:layout_height">@dimen/test_brushing_instructions_index_size</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/bg_test_brushing_instructions_index</item>
  </style>

  <style name="TestBrushingActivity" parent="KolibreeNoActionBarTheme">
    <item name="android:windowBackground">@color/test_brushing_background</item>
  </style>

  <style name="TestBrushingText">
    <item name="android:textColor">@android:color/black</item>
  </style>

</resources>
