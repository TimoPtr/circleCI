<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white"
  android:layout_gravity="center_horizontal"
  android:orientation="vertical">


  <ProgressBar
    android:id="@+id/test_brushing_avatar_dentist"
    android:layout_width="@dimen/sba_progress_loader_size"
    android:layout_height="@dimen/sba_progress_loader_size"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/xxxhuge_margin"
    android:indeterminateTint="@color/colorPrimary" />

  <TextView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    style="@style/Title"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/big_margin"
    android:text="@string/analysis_in_progress"
    android:textColor="@android:color/black"
    android:textStyle="bold" />


  <LinearLayout
    android:layout_width="@dimen/sba_content_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/xbig_margin"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
      style="@style/LinearLayoutWithDividers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/xbig_margin"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/iv_sba_progress_1"
        android:layout_width="@dimen/test_brushing_instructions_index_size"
        android:layout_height="@dimen/test_brushing_instructions_index_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/check_mark_disabled" />

      <TextView
        android:id="@+id/test_brushing_instruction_1"
        style="@style/TestBrushingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/brushing_progress_msg_1"
        android:textSize="@dimen/big_text" />
    </LinearLayout>

    <LinearLayout
      style="@style/LinearLayoutWithDividers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/xbig_margin"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/iv_sba_progress_2"
        android:layout_width="@dimen/test_brushing_instructions_index_size"
        android:layout_height="@dimen/test_brushing_instructions_index_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/check_mark_disabled" />

      <TextView
        android:id="@+id/test_brushing_instruction_2"
        style="@style/TestBrushingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/brushing_progress_msg_2"
        android:textSize="@dimen/big_text" />
    </LinearLayout>

    <LinearLayout
      style="@style/LinearLayoutWithDividers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/xbig_margin"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/iv_sba_progress_3"
        android:layout_width="@dimen/test_brushing_instructions_index_size"
        android:layout_height="@dimen/test_brushing_instructions_index_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/check_mark_disabled" />

      <TextView
        android:id="@+id/test_brushing_instruction_3"
        style="@style/TestBrushingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/brushing_progress_msg_3"
        android:textSize="@dimen/big_text" />
    </LinearLayout>

    <LinearLayout
      style="@style/LinearLayoutWithDividers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/xbig_margin"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/iv_sba_progress_4"
        android:layout_width="@dimen/test_brushing_instructions_index_size"
        android:layout_height="@dimen/test_brushing_instructions_index_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/check_mark_disabled" />

      <TextView
        android:id="@+id/test_brushing_instruction_4"
        style="@style/TestBrushingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/brushing_progress_msg_4"
        android:textSize="@dimen/big_text" />
    </LinearLayout>
  </LinearLayout>


</LinearLayout>
