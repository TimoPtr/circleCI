<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_rounded_white"
  android:gravity="center"
  android:orientation="vertical">

  <TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rounded_dialog_margin_normal"
    android:layout_marginBottom="@dimen/rounded_dialog_margin_big"
    android:text="@string/read_diagram_dialog_title"
    android:textColor="@android:color/black"
    android:textSize="@dimen/xxxbig_text"/>

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/read_diagram_jaws"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/small_margin"
      android:layout_below="@+id/read_diagram_top"
      android:layout_toRightOf="@id/read_diagram_left"
      android:src="@drawable/ic_jaws"/>

    <TextView
      android:id="@+id/read_diagram_top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:padding="@dimen/tiny_margin"
      android:background="@drawable/shape_oval_dark_gray"
      android:gravity="center"
      android:minWidth="@dimen/read_dialog_direction_min_width"
      android:text="@string/read_diagram_dialog_top"
      android:textColor="@color/black"
      android:textSize="@dimen/normal_text"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/read_diagram_jaws"
      android:layout_centerHorizontal="true"
      android:padding="@dimen/tiny_margin"
      android:background="@drawable/shape_oval_dark_gray"
      android:gravity="center"
      android:minWidth="@dimen/read_dialog_direction_min_width"
      android:text="@string/read_diagram_dialog_bottom"
      android:textColor="@color/black"
      android:textSize="@dimen/normal_text"/>

    <TextView
      android:id="@+id/read_diagram_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:padding="@dimen/tiny_margin"
      android:background="@drawable/shape_oval_dark_gray"
      android:gravity="center"
      android:minWidth="@dimen/read_dialog_direction_min_width"
      android:text="@string/read_diagram_dialog_left"
      android:textColor="@color/black"
      android:textSize="@dimen/normal_text"/>

    <TextView
      android:id="@+id/read_diagram_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/read_diagram_jaws"
      android:padding="@dimen/tiny_margin"
      android:background="@drawable/shape_oval_dark_gray"
      android:gravity="center"
      android:minWidth="@dimen/read_dialog_direction_min_width"
      android:text="@string/read_diagram_dialog_right"
      android:textColor="@color/black"
      android:textSize="@dimen/normal_text"/>

  </RelativeLayout>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/average_margin"
    android:layout_marginLeft="@dimen/rounded_dialog_margin_small"
    android:layout_marginRight="@dimen/rounded_dialog_margin_small"
    android:gravity="center"
    android:text="@string/read_diagram_dialog_body"
    android:textColor="@color/black"
    android:textSize="@dimen/big_text"/>

  <Button
    android:id="@+id/read_diagram_ok"
    android:layout_height="@dimen/round_button_height"
    android:layout_width="wrap_content"
    style="@style/PrimaryColorRoundButton"
    android:layout_marginTop="@dimen/rounded_dialog_margin_big"
    android:layout_marginBottom="@dimen/rounded_dialog_margin_big"
    android:paddingLeft="@dimen/rounded_dialog_margin_normal"
    android:paddingRight="@dimen/rounded_dialog_margin_normal"
    android:minWidth="@dimen/read_dialog_ok_width"
    android:text="@string/read_diagram_dialog_ok"
    android:textSize="@dimen/xnormal_text"/>

</LinearLayout>
