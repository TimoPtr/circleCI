<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="@dimen/rounded_dialog_margin_big"
  android:background="@drawable/shape_rounded_white"
  android:gravity="center"
  android:orientation="vertical">

  <TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/rounded_dialog_margin_big"
    android:text="@string/speed_learn_more_dialog_title"
    android:textColor="@android:color/black"
    android:textSize="@dimen/xxxbig_text"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/rounded_dialog_margin_big"
    android:gravity="center"
    android:text="@string/speed_learn_more_dialog_body_top"
    android:textColor="@color/black"
    android:textSize="@dimen/big_text"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/rounded_dialog_margin_big"
    android:gravity="center"
    android:text="@string/speed_learn_more_dialog_body_bottom"
    android:textColor="@color/black"
    android:textSize="@dimen/big_text"/>

  <Button
    android:id="@+id/speed_learn_more_ok"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/round_button_height"
    style="@style/PrimaryColorRoundButton"
    android:layout_marginTop="@dimen/rounded_dialog_margin_big"
    android:layout_marginBottom="@dimen/rounded_dialog_margin_big"
    android:paddingLeft="@dimen/rounded_dialog_margin_normal"
    android:paddingRight="@dimen/rounded_dialog_margin_normal"
    android:minWidth="@dimen/read_dialog_ok_width"
    android:text="@string/read_diagram_dialog_ok"
    android:textSize="@dimen/xnormal_text"/>

  <TextView
    android:id="@+id/speed_learn_more_help"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/rounded_dialog_margin_small"
    android:layout_marginRight="@dimen/rounded_dialog_margin_small"
    android:padding="@dimen/tiny_margin"
    android:background="?attr/selectableItemBackground"
    android:gravity="center"
    android:text="@string/speed_learn_more_dialog_help"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="@dimen/big_text"/>

</LinearLayout>
