<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical"
  tools:context="com.kolibree.android.sba.testbrushing.duringsession.TestBrushingDuringSessionFragment">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <com.kolibree.android.sba.testbrushing.duringsession.view.AnimatedImageView
      android:id="@+id/animation1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

    <com.kolibree.android.sba.testbrushing.duringsession.view.AnimatedImageView
      android:id="@+id/animation2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

    <com.kolibree.android.mouthmap.widget.timer.MouthMapTimerView
      android:id="@+id/timer_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="@dimen/average_margin"
      android:layout_marginBottom="@dimen/average_margin"/>

  </RelativeLayout>

  <com.kolibree.android.sba.testbrushing.duringsession.view.CarouselIndicatorView
    android:id="@+id/carousel_indicator"
    android:layout_width="match_parent"
    android:layout_height="5dp"/>

  <TextView
    android:id="@+id/description_text"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginStart="@dimen/average_margin"
    android:layout_marginEnd="@dimen/average_margin"
    android:gravity="center"
    android:textColor="@android:color/black"
    android:textSize="@dimen/xbig_text"
    tools:text="@string/durring_session_description_step3"/>

</LinearLayout>
