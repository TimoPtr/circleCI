<resources>

  <style name="Widget.Button.TapToCopy" parent="Widget.Button.Icon">
    <item name="strokeColor">?colorBackgroundDark</item>
    <item name="android:textAppearance">?textAppearanceBody2</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@drawable/sel_tap_to_copy_textcolor</item>
    <item name="android:background">@drawable/sel_tap_to_copy</item>
    <item name="backgroundTint">@null</item>
    <item name="android:button">@null</item>
    <item name="android:theme">@style/AppThemeOverlay.Button.TapToCopy</item>
    <item name="icon">@drawable/ic_copy</item>
    <item name="iconTint">#5FBFBB</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
  </style>

  <style name="AppThemeOverlay.Button.TapToCopy" parent="AppTheme">
    <item name="colorPrimary">?android:textColorSecondary</item>
  </style>

  <style name="Widget.TextView.CheckItOut">
    <item name="android:background">@drawable/shape_rounded</item>
    <item name="android:backgroundTint">@color/headspace_blue</item>
    <item name="android:textAppearance">?textAppearanceHeadline6</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingStart">@dimen/dot_trip</item>
    <item name="android:paddingEnd">@dimen/dot_trip</item>
    <item name="android:paddingTop">@dimen/dot</item>
    <item name="android:paddingBottom">@dimen/dot</item>
  </style>
</resources>
