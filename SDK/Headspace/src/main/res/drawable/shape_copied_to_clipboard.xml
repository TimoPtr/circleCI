    android:bottom="@dimen/dot_half"
    android:top="@dimen/dot_half">
    <shape android:shape="rectangle">
      <solid android:color="?android:attr/colorPrimary" />
      <corners android:radius="@dimen/dot_trip" />
    </shape>
  </item>
  <item
    android:bottom="@dimen/dot_half"
    android:top="@dimen/dot_half">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dot_trip" />
      <solid android:color="?copiedToClipboardBackgroundColor" />
    </shape>
  </item>
