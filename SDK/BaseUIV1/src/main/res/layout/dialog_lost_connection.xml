<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_rounded_white"
  android:gravity="center"
  android:orientation="vertical"
  android:padding="@dimen/small_margin">

  <TextView
    android:layout_width="@dimen/dialog_content_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/xbig_margin"
    android:gravity="center_horizontal"
    android:text="@string/dialog_lost_connexion_title"
    android:textColor="@color/colorPrimary"
    android:textSize="@dimen/xbig_text" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/big_margin"
    android:layout_marginTop="@dimen/xbig_margin"
    android:layout_marginRight="@dimen/big_margin"
    android:gravity="center"
    android:text="@string/dialog_lost_connexion_description"
    android:textColor="@color/grey_lighter"
    android:textSize="@dimen/normal_text" />


  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/huge_margin">

    <ImageView
      android:id="@+id/ivToothbrush"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/big_toothbrush" />

    <ImageView
      android:layout_width="wrap_content"
      android:id="@+id/ivIndication"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/ivToothbrush"
      android:layout_alignBottom="@+id/ivToothbrush"
      android:src="@drawable/rounded_red" />

  </RelativeLayout>

  <TextView
    android:id="@+id/tvQuit"
    android:layout_width="match_parent"
    android:layout_height="@dimen/round_button_height"
    android:layout_marginLeft="@dimen/big_margin"
    android:layout_marginTop="@dimen/huge_margin"
    android:layout_marginRight="@dimen/big_margin"
    android:background="?selectableItemBackground"
    android:gravity="center"
    android:text="@string/dialog_lost_connexion_quit_btn"
    android:textColor="@color/grey_lighter"
    android:textSize="@dimen/normal_text" />


</LinearLayout>
