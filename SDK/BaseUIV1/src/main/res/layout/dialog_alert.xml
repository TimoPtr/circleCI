<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

  <ImageView
    android:id="@+id/alert_dialog_icon"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="15dp"
    android:scaleType="fitCenter"
    app:tint="@color/colorPrimary"
    tools:ignore="ContentDescription"
    tools:src="@drawable/ic_cross"/>

  <TextView
    android:id="@+id/alert_dialog_title"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_alignBottom="@id/alert_dialog_icon"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@id/alert_dialog_icon"
    android:layout_toEndOf="@id/alert_dialog_icon"
    android:gravity="center_vertical"
    android:textColor="@color/colorPrimary"
    android:textSize="@dimen/xnormal_text"
    tools:text="Title"/>

  <TextView
    android:id="@+id/alert_dialog_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_below="@id/alert_dialog_title"
    android:lineSpacingExtra="5dp"
    android:minLines="2"
    android:textColor="@color/grey_dark"
    android:textSize="@dimen/normal_text"
    tools:text="message"/>

  <Button
    android:id="@+id/alert_dialog_button"
    style="@style/ColorPrimaryFilledButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_below="@id/alert_dialog_message"
    android:layout_centerHorizontal="true"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:minWidth="100dp"
    tools:text="button"/>
</RelativeLayout>
