    <item name="alertDialogInsetStart">@dimen/dot_trip</item>
    <item name="alertDialogInsetTop">@dimen/dot_trip</item>
    <item name="alertDialogInsetEnd">@dimen/dot_trip</item>
    <item name="alertDialogInsetBottom">@dimen/dot_trip</item>
    <item name="alertDialogHorizontalBackgroundInset">@dimen/dot_double</item>
