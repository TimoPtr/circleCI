    <!-- Follow `<enum name="fitCenter" value="3" />` -->
    <item name="testBrushingAnimationScaleType">3</item>

    <item name="completeProfileBubbleBackgroundColor">@color/black87</item>
    <item name="completeProfileBubbleActionColor">@color/mandy</item>

    <item name="changeProfileAvatarIconColor">@color/downy</item>
