  <style name="AppTheme" parent="Base.AppTheme" />

  <style name="AppTheme.Light">
    <item name="backgroundColor">@color/white</item>
    <item name="progressOverlayColor">@color/white80</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowTranslucentNavigation">false</item>
  </style>

  <!-- Use to override activity outside the sdk/app -->
  <style name="AppTheme.Light.DarkStatusBar">
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:statusBarColor">?android:colorPrimary</item>
  </style>

  <style name="AppTheme.LightActionBar">
    <item name="appBarLayoutStyle">@style/Widget.Toolbar.Light</item>
    <item name="toolbarStyle">@style/Widget.Toolbar.Light</item>
  </style>

  <style name="AppTheme.DarkActionBar">
    <item name="appBarLayoutStyle">@style/Widget.Toolbar.Dark</item>
    <item name="toolbarStyle">@style/Widget.Toolbar.Dark</item>
  </style>

  <style name="ThemeOverlay.SupportActionBar.Dark" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface">
    <item name="android:textColorPrimary">@color/white</item>
  </style>

  <style name="Widget.ActonBar.Light" parent="Widget.AppCompat.Light.ActionBar.Solid">
    <item name="titleTextStyle">@style/TextAppearance.Headline4</item>
  </style>

  <style name="AppTheme.Light.DarkStatusBar.SupportActionBar">
    <item name="windowActionBar">true</item>
    <item name="windowNoTitle">false</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_small</item>
    <item name="actionBarTheme">@style/ThemeOverlay.SupportActionBar.Dark</item>
    <item name="actionBarStyle">@style/Widget.ActonBar.Light</item>
  </style>

  <!--
  INVERSE
  -->

  <style name="Base.AppTheme.Inverse" parent="AppTheme">

    <item name="android:windowTranslucentNavigation">false</item>

    <!-- Color -->
    <item name="inverseThemeMainColor">@color/emperor</item>
    <item name="inverseThemeMainColorDark">@color/black</item>
    <item name="colorPrimary">@color/white</item>
    <item name="colorAccent">@color/white</item>
    <item name="backgroundColor">?inverseThemeMainColor</item>
    <item name="android:windowBackground">?inverseThemeMainColor</item>
    <item name="colorOnPrimary">?inverseThemeMainColor</item>
    <item name="colorOnSurface">@color/white</item>
    <item name="colorOnError">?inverseThemeMainColorDark</item>
    <item name="colorOnSecondary">@color/white80</item>
    <item name="rippleColorMono">@color/silver</item>

    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textColorPrimaryDisableOnly">@color/white60</item>
    <item name="android:textColorSecondary">@color/white80</item>
    <item name="android:textColorTertiary">@color/white</item>
    <item name="textColorAccent">@color/white</item>
    <item name="textColorAccentSecondary">@color/white</item>
    <item name="android:textColorHighlight">@color/white30</item>
    <item name="colorControlActivated">@color/white</item>

    <item name="toolbarCollapsedBackground">?inverseThemeMainColor</item>
    <item name="toolbarExpandedBackground">?inverseThemeMainColor</item>
    <item name="onToolbarCollapsedBackground">?inverseThemeMainColor</item>
    <item name="onToolbarExpandedBackground">?inverseThemeMainColor</item>

    <!--
    TEXT
    -->
    <item name="textAppearanceSubtitle1">@style/TextAppearance.Inverse.Subtitle1
    </item>

    <!--
    WIDGETS
    -->

    <item name="buttonStyle">@style/Widget.Button</item>
    <item name="materialButtonStyle">@style/Widget.Button</item>
    <item name="materialButtonIconStyle">@style/Widget.Button.Icon</item>
    <item name="materialButtonOutlinedStyle">
      @style/Widget.Inverse.Button.OutlinedButton
    </item>
    <item name="materialButtonOutlinedIconStyle">
      @style/Widget.Inverse.Button.OutlinedButton.Icon
    </item>

    <item name="textInputStyle">@style/Widget.TextInputLayout.Inverse</item>
    <item name="autoCompleteTextInputLayoutStyle">@style/Widget.TextInputLayout.ExposedDropDown.Inverse</item>

    <item name="snackbarStyle">@style/Widget.Snackbar.Opaque</item>

    <item name="materialAlertDialogTheme">@style/ThemeOverlay.Dialog.Inverse</item>

    <item name="timerViewStyle">@style/Widget.TimerView.Inverse</item>
  </style>

  <style name="AppTheme.Inverse" parent="Base.AppTheme.Inverse" />

  <style name="AppTheme.Inverse.Red">
    <item name="inverseThemeMainColor">@color/mandy</item>
    <item name="inverseThemeMainColorDark">@color/maroon</item>
  </style>

  <style name="AppTheme.Inverse.Red.TranslucentNavigation">
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="AppTheme.Launcher" parent="AppTheme.Inverse.Red">
    <item name="android:windowBackground">@drawable/splash_screen</item>
  </style>

  <style name="AppTheme.Inverse.Teal">
    <item name="inverseThemeMainColor">@color/downy</item>
    <item name="inverseThemeMainColorDark">@color/seafoam</item>
  </style>

  <style name="AppTheme.Inverse.Teal.TranslucentNavigation">
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="AppTheme.Inverse.Blue">
    <item name="inverseThemeMainColor">@color/havelock</item>
  </style>

  <style name="AppTheme.Inverse.Blue.TranslucentNavigation">
    <item name="android:windowTranslucentNavigation">true</item>
