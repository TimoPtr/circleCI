    <item name="android:paddingEnd">@dimen/dot_double</item>
    <item name="android:drawableTint">?android:textColorSecondary</item>
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:minHeight">@dimen/dot_sev</item>
  </style>

  <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Toolbar</item>
  </style>

  <style name="Widget.Toolbar.Light" parent="Widget.MaterialComponents.Toolbar">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Toolbar.Light</item>
  </style>

  <style name="Widget.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar">
    <item name="materialThemeOverlay">@style/ThemeOverlay.Toolbar.Dark</item>
  </style>

  <style name="ThemeOverlay.Toolbar" parent="">
    <item name="colorPrimary">@color/mandy</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="toolbarIconTint">@color/white</item>
    <item name="badgeBorderWidth">1dp</item>
  </style>

