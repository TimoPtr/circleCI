<resources>
  <dimen name="mind_your_speed_small_margin">@dimen/dot_half</dimen>
  <dimen name="mind_your_speed_medium_margin">@dimen/dot</dimen>
  <dimen name="speedometer_thickness">12dp</dimen>

  <!-- jaw height = height of the whole view * jaw_height_percentage -->
  <item name="jaw_height_percentage" format="float" type="dimen">0.2</item>
  <!--
  jaw space height = height of the whole view * jaw_height_percentage

  if jaw_background_space_height_percentage < jaw_height_percentage,
  jaw will be drawn on top of speedometer

  if jaw_background_space_height_percentage == jaw_height_percentage,
  jaw will be drawn right underneath speedometer

  if jaw_background_space_height_percentage > jaw_height_percentage,
  jaw will have additional top margin
  -->
  <item name="jaw_background_space_height_percentage" format="float" type="dimen">0.16</item>
</resources>
