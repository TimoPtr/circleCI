<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="@dimen/rounded_dialog_width"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/missed_area_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mouth_map_dialog_margin"
    android:src="@drawable/ic_legend_missed"
    tools:ignore="ContentDescription" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_alignTop="@id/missed_area_icon"
    android:layout_alignBottom="@id/missed_area_icon"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="@dimen/mouth_map_dialog_margin"
    android:layout_toEndOf="@id/missed_area_icon"
    android:gravity="center_vertical"
    android:text="@string/missed_area_dialog_title"
    android:textAppearance="?textAppearanceHeadline2"
    android:textColor="@android:color/black" />

  <TextView
    android:id="@+id/missed_area_body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/missed_area_icon"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="@dimen/mouth_map_dialog_margin"
    android:layout_marginEnd="@dimen/mouth_map_dialog_margin"
    android:gravity="center_vertical"
    android:text="@string/missed_area_dialog_body"
    android:textAppearance="?textAppearanceSubtitle1"
    android:textColor="@android:color/black" />

  <Button
    android:id="@+id/missed_area_ok"
    style="?primaryColorButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/round_button_height"
    android:layout_below="@+id/missed_area_body"
    android:layout_marginStart="@dimen/mouth_map_dialog_margin"
    android:layout_marginTop="@dimen/xxhuge_margin"
    android:layout_marginEnd="@dimen/mouth_map_dialog_margin"
    android:layout_marginBottom="@dimen/mouth_map_dialog_margin"
    android:text="@string/mouth_map_dialog_ok" />

</RelativeLayout>

