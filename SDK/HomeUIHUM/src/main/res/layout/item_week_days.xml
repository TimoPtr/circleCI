<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="weekDays"
      type="com.kolibree.android.app.ui.home.tab.view.WeekDayLabels" />

    <import type="android.view.View" />

  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/week_day_1"
      android:layout_width="@dimen/dot_quad"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@{weekDays.dayLabelAt(0)}"
      android:textAppearance="?textAppearanceBody1"
      android:textColor="?android:textColorTertiary"
      tools:text="S" />

    <Space
      android:layout_width="@dimen/match_constraints"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/week_day_2"
      android:layout_width="@dimen/dot_quad"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@{weekDays.dayLabelAt(1)}"
      android:textAppearance="?textAppearanceBody1"
      android:textColor="?android:textColorTertiary"
      tools:text="M" />

    <Space
      android:layout_width="@dimen/match_constraints"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/week_day_3"
      android:layout_width="@dimen/dot_quad"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@{weekDays.dayLabelAt(2)}"
      android:textAppearance="?textAppearanceBody1"
      android:textColor="?android:textColorTertiary"
      tools:text="T" />

    <Space
      android:layout_width="@dimen/match_constraints"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/week_day_4"
      android:layout_width="@dimen/dot_quad"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@{weekDays.dayLabelAt(3)}"
      android:textAppearance="?textAppearanceBody1"
      android:textColor="?android:textColorTertiary"
      tools:text="W" />

    <Space
      android:layout_width="@dimen/match_constraints"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/week_day_5"
      android:layout_width="@dimen/dot_quad"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@{weekDays.dayLabelAt(4)}"
      android:textAppearance="?textAppearanceBody1"
      android:textColor="?android:textColorTertiary"
      tools:text="T" />

    <Space
      android:layout_width="@dimen/match_constraints"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/week_day_6"
      android:layout_width="@dimen/dot_quad"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@{weekDays.dayLabelAt(5)}"
      android:textAppearance="?textAppearanceBody1"
      android:textColor="?android:textColorTertiary"
      tools:text="F" />

    <Space
      android:layout_width="@dimen/match_constraints"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/week_day_7"
      android:layout_width="@dimen/dot_quad"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@{weekDays.dayLabelAt(6)}"
      android:textAppearance="?textAppearanceBody1"
      android:textColor="?android:textColorTertiary"
      tools:text="S" />

  </LinearLayout>

</layout>
